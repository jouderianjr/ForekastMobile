"ScrollView": {
	top: 0,
	width: Ti.UI.FILL,
	height: Ti.UI.FILL,
	contentHeight: "auto",
	layout: "vertical"
},
".fieldWrapper": {
	height: Ti.UI.SIZE,
	top: 10,
	left: 10,
	right: 10,
	backgroundColor: "#F6F6F6"
},
"TextField": {
	returnKeyType: Ti.UI.RETURNKEY_NEXT,
	width: Ti.UI.FILL,
	height: 22,
	top: 10,
	left: 10,
	right: 10,
	bottom: 10,
	backgroundColor: "#F6F6F6",
	color: "#3E4252",
	textAlign: "left",
	font: {
		fontSize: 16,
		fontFamily: Alloy.CFG.Font.Regular
	},
	autocorrect: true
},
"TextField[platform=android]": {
	height: Ti.UI.SIZE,
	left: 7,
	right: 7
},
"TextArea": {
	returnKeyType: Ti.UI.RETURNKEY_DEFAULT,
	width: Ti.UI.FILL,
	height: 132,
	top: 3,
	left: 5,
	right: 5,
	bottom: 3,
	backgroundColor: "transparent",
	color: "#3E4252",
	textAlign: "left",
	font: {
		fontSize: 16,
		fontFamily: Alloy.CFG.Font.Regular
	},
	autocapitalization: Ti.UI.TEXT_AUTOCAPITALIZATION_SENTENCES,
	autocorrect: true,
	enableReturnKey: true
},
"#FieldName": {
	keyboardType: Ti.UI.KEYBOARD_DEFAULT
},
"#FieldEmail": {
	keyboardType: Ti.UI.KEYBOARD_EMAIL
},
"#FieldTwitter": {
	keyboardType: Ti.UI.KEYBOARD_DEFAULT
},
"Button": {
	top: 10,
	left: 20,
	right: 20,
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
	backgroundColor: "transparent",
	color: "#7A7F9E",
	font: {
		fontSize: 16,
		fontFamily: Alloy.CFG.Font.Regular
	}
}