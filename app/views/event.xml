<Alloy>
	<Window id="EventWindow">
		<RightNavButton platform="ios">
			<ImageView image="images/icon_reminder.png" width="22" height="22" onClick="toggleReminder" />
		</RightNavButton>
		
		<View class="imageContainer">
			<ImageView id="Image" image="https://s3.amazonaws.com/FK-PROD/events/images/540b/075c/666b/774b/1ebd/0000/medium/open-uri20140906-19230-iztbwt?1410807001" />
			<View class="imageOverlay" />
		</View>
		
		<ScrollView id="ScrollView">
			<View id="Content">
				<Label class="title" text="Watch the Atlas V rocket launch streaming live" />
				
				<View class="details">
					<View class="meta">
						<Label class="time" text="4:44pm" />
						<Label class="subkast" text="Technology" />
					</View>
					
					<View class="social">
						<Button id="Share" title="Share Event" />
						
						<View id="Upvote">
							<ImageView class="upvoteArrow" />
							<Label class="upvoteCount" text="20" />
						</View>
					</View>
				</View>
				
				<!-- Dynamically created description goes here -->
			</View>
			
			<View id="Comments">
				<View class="commentBoxWrapper">
					<TextArea id="CommentBox" value="\nLeave a comment..." />
				</View>
				
				<Button id="CommentSubmit" title="Comment" platform="android" />
				
				<TableView id="CommentsTable">
					<TableViewRow>
						<Label class="commentText">
							I really hope this doesn't get delayed. The timing is perfect for me to catch it!
						</Label>
						
						<Label class="commentAuthor">
							chemistry14
						</Label>
					</TableViewRow>
					<TableViewRow>
						<Label class="commentText">
							How often do these things get delayed?
						</Label>
						
						<Label class="commentAuthor">
							donutgoblin
						</Label>
					</TableViewRow>
				</TableView>
			</View>
		</ScrollView>
		
		<View class="navbarOverlay" />
	</Window>
</Alloy>