<Alloy>
	<View id="Row">
		<ScrollView class="imageContainer" platform="ios">
			<ImageView id="Image" />
			<ImageView id="ImageOverlay" />
		</ScrollView>
		
		<View class="imageContainer" platform="android">
			<ImageView id="Image" />
		</View>
		
		<View class="content">
			<Label id="Title" />
			
			<View class="details">
				<View class="meta">
					<Label id="Time" />
					<Label id="Subkast" />
				</View>
				
				<View id="Upvotes">
					<ImageView class="arrow" />
					<Label id="UpvoteCount" />
				</View>
			</View>
		</View>
	</View>
</Alloy>