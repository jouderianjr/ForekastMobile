<Alloy>
	<Window id="ListWindow">
		<TitleControl platform="ios">
			<ImageView image="/images/title.png" onClick="goToCurrentDate" />
		</TitleControl>
		
		<RightNavButton platform="ios">
			<Button image="/images/icon_settings.png" onClick="openSettings" />
		</RightNavButton>
		
		<Menu platform="android">
			<MenuItem title="Settings" showAsAction="Ti.Android.SHOW_AS_ACTION_NEVER" onClick="App.openSettings" />
		</Menu>
		
		<View class="container">
			<View id="DateSlider" />
			
			<ImageView id="SliderIndicatorLeft" image="/images/scroller_left.png" platform="android" />
			<ImageView id="SliderIndicatorRight" image="/images/scroller_right.png" platform="android" />
			
			<View id="Loading">
				<ImageView id="LoadingIndicator" />
			</View>
			
			<ScrollView id="Events" />
		</View>
		
		<View id="Overlay" />
	</Window>
</Alloy>