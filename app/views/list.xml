<Alloy>
	<Window id="ListWindow">
		<TitleControl>
			<ImageView image="images/title.png" />
		</TitleControl>
		
		<RightNavButton platform="ios">
			<Button image="images/icon_settings.png" onClick="openSettings" />
		</RightNavButton>
		
		<View class="container">
			<ScrollView id="DateNav">
				<View class="dateNavItem dateNavItemEmpty">
					<Label class="dateNavItemLabel" />
				</View>
				
				<View class="dateNavItem">
					<Label class="dateNavItemLabel dateNavItemActive" text="Today" />
				</View>
				
				<View class="dateNavItem">
					<Label class="dateNavItemLabel" text="Tomorrow" />
				</View>
				
				<View class="dateNavItem dateNavItemEmpty">
					<Label class="dateNavItemLabel" />
				</View>
			</ScrollView>
			
			<ScrollView id="Events" />
		</View>
		
		<View id="Overlay" />
	</Window>
</Alloy>